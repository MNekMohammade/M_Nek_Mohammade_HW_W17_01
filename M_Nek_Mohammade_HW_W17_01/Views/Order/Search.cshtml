@model Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Search Order</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Search Order</h2>
        <form method="get" action="@Url.Action("Search")" class="form-inline">
            <div class="form-group mb-2">
                <label for="orderId" class="sr-only">Order ID</label>
                <input type="number" class="form-control" id="orderId" name="orderId" placeholder="Order ID">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>
        @if (Model != null)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Order Date</th>
                        <th>Requested Date</th>
                        <th>Shipped Date</th>
                        <th>Staff</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.OrderId</td>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.Address</td>
                        <td>@Model.Phone</td>
                        <td>@Model.OrderDate.ToShortDateString()</td>
                        <td>@(Model.RequesteDate.HasValue ? Model.RequesteDate.Value.ToShortDateString() : "N/A")</td>
                        <td>@(Model.ShippedDate.HasValue ? Model.ShippedDate.Value.ToShortDateString() : "N/A")</td>
                        <td>@Model.Staff.FirstName @Model.Staff.LastName</td>
                        <td>
                            <a href="@Url.Action("Details", new { orderId = Model.OrderId })" class="btn btn-info">View Details</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</body>
</html>
